<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ccc" android:endColor="#fff"
                      android:angle="45"
                android:type="linear"/>
            <padding android:bottom="7dp" android:left="7dp"
                     android:right="7dp" android:top="7dp" />
            <corners android:radius="25dp"/>
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#fff" android:endColor="#ccc"
                      android:angle="45"
                      android:type="linear"/>
            <padding android:bottom="7dp" android:left="7dp"
                     android:right="7dp" android:top="7dp" />
            <corners android:radius="25dp"/>
        </shape>
    </item>

</selector>